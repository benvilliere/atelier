{
  "name": "@genart/atelier",
  "version": "1.17.0",
  "private": false,
  "description": "Tool for managing ever-changing generative art projects",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benvilliere/atelier.git"
  },
  "license": "MIT",
  "author": "Ben Villiere",
  "type": "module",
  "main": "src/atelier.js",
  "bin": {
    "atelier": "src/atelier.js"
  },
  "scripts": {
    "atelier": "node ./src/atelier.js",
    "dev": "nodemon",
    "postinstall": "node ./src/scripts/postinstall.js",
    "publish-package": "npm publish --access public",
    "sort-package": "npx sort-package-json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "timeline": "node ./src/timeline/backend.js"
  },
  "nodemonConfig": {
    "exec": "node ./src/atelier.js --timeline-only",
    "ext": "js,json,html,css",
    "watch": [
      "./src/**/*"
    ]
  },
  "dependencies": {
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "lodash": "^4.17.21",
    "picomatch": "^4.0.1",
    "puppeteer": "^22.3.0",
    "puppeteer-screen-recorder": "^3.0.3",
    "simple-git": "^3.22.0",
    "vite": "^5.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
