{
  "server": {
    "host": "localhost",
    "root": "./public"
  },
  "git": {
    "commit": "Auto-commit",
    "include": ["src/", "index.html"],
    "exclude": [".atelier/", "node_modules/", "dist/"]
  },
  "screenshot": {
    "path": ".atelier/screenshots",
    "format": "png",
    "width": 1280,
    "height": 720
  },
  "watch": {
    "patterns": ["src/**/*", "index.html"],
    "debounceTime": 500
  }
}
