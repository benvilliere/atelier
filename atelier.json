{
  "server": {},
  "git": {
    "commit": "Auto-commit",
    "include": ["src/", "index.html"],
    "exclude": [".atelier/", "node_modules/", "dist/"]
  },
  "screenshot": {
    "path": ".atelier/screenshots",
    "format": "png",
    "width": 2560,
    "height": 1440
  },
  "watch": {
    "patterns": ["src/**/*", "index.html"],
    "debounceTime": 500
  }
}
